{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "X-Spider",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": true,
        "open": ".*",
        "scope": [
          {
            "name": "explorer",
            "cmd": "explorer",
            "args": [
              {
                "validator": "^(\\select,)?.+$"
              }
            ]
          },
          {
            "name": "binaries/aria2c",
            "sidecar": true
          }
        ]
      },
      "window": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "x-spider",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/aria2c"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "X-Spider",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true
      }
    ]
  }
}
